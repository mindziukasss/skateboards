<div class="row">
    <div class="col-sm-12 col-md-6">
        {{ form_start(form) }}
        <div class="form-group">
            <label>{{ 'order.form.name'|trans }}</label>
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group">
            <label>{{ 'order.form.surname'|trans }}</label>
            {{ form_widget(form.surname) }}
        </div>
        <div class="form-group">
            <label>{{ 'order.form.email'|trans }}</label>
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group">
            <label>{{ 'order.form.phone'|trans }}</label>
            {{ form_widget(form.phone) }}
        </div>
        <div class="form-group">
            <label>{{ 'order.form.city'|trans }}</label>
            {{ form_widget(form.city) }}
        </div>
        <div class="form-group">
            <label>{{ 'order.form.address'|trans }}</label>
            {{ form_widget(form.address) }}
        </div>
        <button class="btn btn-success">{{ button_label|default('order.form.order'|trans) }}</button>
        {{ form_end(form) }}
    </div>
</div>